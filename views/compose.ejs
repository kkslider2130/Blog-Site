<%- include('partials/header') -%>

<h1>Compose</h1>
<form class='compose' action="/compose" method="POST">
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="subject" id="subject" class="form-control">
       </div>
       <div class="form-group">
        <label>Post</label>
        <textarea name="postBody" type='text' id="postContent" class="form-control" rows="5"></textarea>
       </div>
       <div class="form-group">
        <input type="submit" name="post" id="post" class="btn btn-success" value="Publish" />
       </div>
</form>
<%- include('partials/footer') -%>